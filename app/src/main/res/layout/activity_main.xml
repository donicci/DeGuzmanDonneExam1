<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/bg">

    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="155dp"
        app:cardBackgroundColor="#A5A5A5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="90dp"
            app:srcCompat="@drawable/hqdefault" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:text="Nikolai Reeds"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:text="Professional Gamer"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="62dp"
            android:layout_marginRight="10dp"
            android:text="Nicolai Reedtz (born September 8, 1995 in Vejle), better known as dev1ce (also known as device), is a Danish professional Counter-Strike: Global Offensive (CS:GO) player."
            app:fontFamily="sans-serif-condensed-medium" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="155dp"
        app:cardBackgroundColor="#A5A5A5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="90dp"
            app:srcCompat="@drawable/R9KCFTBB_400x400" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:text="Lukas Rossander"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:text="Professional Gamer"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/textView9"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="10dp"
            android:text='Lukas "gla1ve" Rossander (born June 7, 1995) is a Danish Counter-Strike: Global Offensive player and former Counter-Strike: Source player. He currently plays the role of in-game leader for Astralis.'
            app:fontFamily="sans-serif-condensed-medium" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="196dp"
        app:cardBackgroundColor="#A5A5A5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="125dp"
            app:srcCompat="@drawable/xjpFmwYi_400x400" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:text="Danny Sørensen"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:text="Professional Gamer"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="68dp"
            android:layout_marginRight="10dp"
            android:text='Danny "zonic" Sørensen (born July 30, 1986) is a former Danish professional Counter-Strike 1.6 player. Arguably the greatest Danish 1.6-player of all time, zonic had huge success with several Danish teams, winning around 110,000 dollars in prize money. He was one of the founding members of the legendary mTw.dk,'
            app:fontFamily="sans-serif-condensed-medium" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>